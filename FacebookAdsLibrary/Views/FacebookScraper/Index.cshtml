@model IEnumerable<BookVM>

<h2>Book Search</h2>

<form method="post" asp-action="Index">
    <input type="text" name="search" class="form-control mb-2" placeholder="Enter keyword..." />
    <button class="btn btn-primary">Search</button>
</form>

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}

@if (Model != null)
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Rating</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Price</td>
                    <td>@book.Rating</td>
                    <td>
                        <a href="https://books.toscrape.com/@book.Url" target="_blank">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
